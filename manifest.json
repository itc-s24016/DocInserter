{
  "name": "DocInserter",
  "version": "2.0.3",
  "manifest_version": 3,
  "description": "選択範囲をGoogleドキュメントへ整理して挿入する拡張機能です",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "identity",
    "contextMenus"
  ],
  "host_permissions": [
    "https://docs.googleapis.com/*",
    "https://www.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["https://docs.google.com/*"],
    "js": ["content.js"]
  }]
}
